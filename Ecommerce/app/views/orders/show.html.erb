<h1>Your Cart</h1>

<table class="table">
  <thead>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @order.order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.quantity %></td>
        <td><%= number_to_currency(order_item.item.price) %></td>
        <td>
          <%= button_to 'Remove', order_order_item_path(@order, order_item), method: :delete, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-3">
  <h3>Total: <%= number_to_currency(@order.order_items.sum { |item| item.item.price }) %></h3>
</div>

<div class="mt-3">
  <%= link_to 'Back to Home', root_path, class: 'btn btn-primary' %>
</div>
