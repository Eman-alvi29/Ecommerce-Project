<h2>Payment Details</h2>

<%= form_with(model: @payment, url: order_payments_path(@order), method: :post) do |form| %>
  <div class="mb-3">
    <%= form.label :name, "Name" %>
    <%= form.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :email, "Email" %>
    <%= form.email_field :email, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :address, "Address" %>
    <%= form.text_area :address, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :phone_number, "Phone Number" %>
    <%= form.text_field :phone_number, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :payment_method, "Select Payment Method" %>
    <%= form.select :payment_method, options_for_select([['Credit Card', 'credit_card'], ['PayPal', 'paypal'], ['Bank Transfer', 'bank_transfer']]), class: 'form-control', required: true %>
  </div>

  <div class="d-flex justify-content-between mt-4">
    <%= form.submit 'Pay Now', class: 'btn btn-success' %>
  </div>
<% end %>
